<header class="header " >
      <a href="/products" class="main-nav-link" style="font-size: 3rem;">
        Fastfood
      </a>

      <nav class="main-nav" >
        <ul class="main-nav-list" id="main-nav-link-in-order-history">
          <li><a class="main-nav-link" style="font-size: 2rem">Manage account</a></li>
          <li><a class="main-nav-link" id="main-nav-link-in-order-history" href="/user_receipts">Order history</a></li>
          <% if logged_in? %>
          <li><%= link_to 'Log out', logout_path, method: :post, data: {"turbo-method": :delete}, class: "main-nav-link", id: "main-nav-link-in-order-history" %></li>
          <% else %>
          <li>
            <div><%= link_to 'LOGIN', login_path, class: "main-nav-link", id: "main-nav-link-in-order-history"  %></div>
          </li>
          <% end %>
          <li><a class="main-nav-link" id="main-nav-link-in-order-history" href="favourites">Favourites</a></li>
          <li><a class="main-nav-link nav-cta" id="main-nav-link-in-order-history" href="/cart">Your Cart</a></li>
        </ul>
      </nav>

      <button class="btn-mobile-nav">
        <ion-icon class="icon-mobile-nav" name="menu-outline"></ion-icon>
        <ion-icon class="icon-mobile-nav" name="close-outline"></ion-icon>
      </button>
    </header>

<body>

  <main>
    <div>
      <div>
        <a href="#" class="cart--info--backlink" style="font-size: 30px; margin-top: 30px">Order history:</a>
      </div>
      <div style="display: flex; justify-content: center">
        <table>
          <thead>
            <tr>

              <th>Date ordered</th>
              <th>Total</th>
              <th>Ship to address:</th>
              <th>PDF</th>
            </tr>
          </thead>

          <tbody>

          <% @user_receipts.each do |user_receipt| %>
              <tr>

                <th><%= user_receipt.created_at %></th>
                <td><%= user_receipt.total %> VND</td>
                <td><%= user_receipt.address %></td>
                <td >
                  <% if user_receipt.file.previewable? %>
                    <%= link_to "Show details", rails_blob_path(user_receipt.file, disposition: "inline") %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    </div>
    </main>

</body>
<div id="user_receipts">
  <% @user_receipts.each do |user_receipt| %>
    <% if user_receipt.user_id == current_user.id %>
      <%= render user_receipt %>
      <p>
        <%= link_to "Show this user receipt", user_receipt %>
      </p>
    <% end %>
  <% end %>
</div>
